<div class="row">
  <p id="notice"><%= notice %></p>
  <div class="col s4">
    <h3>Leyes y Acuerdos</h3>
  </div>
  <div class="col s8">
    <%= link_to 'Agregar Ley o Acuerdo', new_legal_path, class: 'btn btn-new white-text' %>
  </div>
  <div class="col s12">

    <table class="highlight">
      <thead>
        <tr>
          <th>Título</th>
          <th>Contenido</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>      
        <% @legals.each do |legal| %>
          <tr>
            <td><%= legal.title %></td>
            <td><%= legal.content %></td>
            <td><%= link_to 'Edit', edit_legal_path(legal) %></td>
            <td><%= link_to 'Eliminar', legal, method: :delete, data: { confirm: '¿Está seguro(a) que desea eliminar esta ley o acuerdo?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  </div> 
</div>
